# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/vms

# AI Model Configuration
AI_MODEL_PATH=./models/
AI_CONFIDENCE_THRESHOLD=0.7

# File Storage
UPLOAD_PATH=./uploads/
MAX_FILE_SIZE=100MB

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Stream Processing
MAX_CONCURRENT_STREAMS=10
STREAM_TIMEOUT=30000
FRAME_PROCESSING_INTERVAL=1000

# AI Processing
AI_QUEUE_SIZE=100
AI_PROCESSING_TIMEOUT=30000
BATCH_PROCESSING_SIZE=5

# Alert Configuration
ALERT_CLEANUP_INTERVAL=3600000
ALERT_EXPIRATION_HOURS=24
CRITICAL_ALERT_RETENTION_DAYS=30

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/vms.log

# External Services (Optional)
# EMAIL_SERVICE_API_KEY=your-email-service-key
# SMS_SERVICE_API_KEY=your-sms-service-key
# SLACK_WEBHOOK_URL=your-slack-webhook-url

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Development
ENABLE_DEBUG_MODE=true
ENABLE_SAMPLE_DATA=true 